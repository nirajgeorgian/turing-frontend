{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["plugin:prettier/recommended", "prettier/react", "prettier/standard", "plugin:jsx-a11y/recommended"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "babel", "jsx-a11y", "prettier"],
	"rules": {
		"comma-dangle": 2,
		"no-cond-assign": 2,
		"no-console": 2,
		"no-debugger": 2,
		"no-empty": 2,
		"semi": ["error", "never"],
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"max-len": [1, 120, 2],
		"quotes": ["error", "single"],
		"padding-line-between-statements": [2]
	}
}
